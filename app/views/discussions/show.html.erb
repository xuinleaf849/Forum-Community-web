<% discussion = Discussion.find_by(id: params["id"]) %>

<div class="row">
  <div class="col-sm-6">
    <h1><%= discussion.title %> </h1>
    <% if discussion.topic.present? %>
      <p class="lead">Topic: <%= link_to discussion.topic.name, "/topics/#{discussion.topic.id}" %></p>
    <% end %>
  </div>
</div>
<div class="row">

  <div class="col-sm-3">
    <strong><%= discussion.content %></strong>
  </div>
  <div class="col-sm-6">

    <div class="row">
      <div class="col-sm-12">
        <h3>Comments:</h3>
        <hr>
        <div class="row">
          <% discussion.comments.each do |comment| %>

            <div class="col-sm-3 text-center">

              <br>
              <%= comment.message %>
              <br>
            </div>
          <% end %>
        </div>
      </div>
    </div>


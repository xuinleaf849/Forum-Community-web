<% topic = Topic.find_by(id: params["id"]) %>

<h1><%= topic.name %></h1>

<p>Discussions about this topic:</p>

<div class="row">
  <% topic.discussions.each do |discussion| %>
    <div class="col-sm-3">
      <%= link_to discussion.title, "/discussions/#{discussion.id}" %>
    </div>
  <% end %>
</div>
<hr>

<div>

  <button><%= link_to "Add Discussions", "/discussions/new" %></button>
</div>

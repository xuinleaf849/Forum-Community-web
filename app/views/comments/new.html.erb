<h1>Add a Comment</h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/comments" do %>

      <p>Comment: <input name="message" type="text" autofocus class="form-control"></p>


      <p>Discussion:
                <select name="discussion_id">
                  <% Discussion.order('title').each do |discussion| %>
                    <option value="<%= discussion.id %>">
                      <%= discussion.title %>
                    </option>
                  <% end %>
                </select>
            </p>
            <button class="btn btn-outline-primary">Add New Comment</button>


    <% end %>

  </div>
</div>

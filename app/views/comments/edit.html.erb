<% comment = Comment.find_by(id: params["id"]) %>

<h1>Editing Comment</h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/comments/#{comment.id}", method: "patch" do %>

      <p>Name: <input value="<%= comment.name %>" name="name" type="text" autofocus class="form-control"></p>

      <button class="btn btn-primary">Update Comment</button>

    <% end %>

  </div>
</div>
